generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
  previewFeatures = [] 
}

datasource db {
  provider  = "postgresql"
  url       = env("LOCAL_URL")
  // directUrl = env("LOCAL_URL")
}

// Models:
model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  active    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  // slug        String    @unique
  price       Decimal
  sale        Boolean  @default(false)
  salePrice   Decimal?
  quantity    Int
  categoryId  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  category    Category @relation(fields: [categoryId], references: [id])
}

model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  slug      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[]
}

